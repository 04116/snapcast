#!/bin/sh

set -e

umask 0022
ACTION="$1"
VERSION="$2"

if [ "$ACTION" = "configure" ]; then
	# add the snapserver user
	if ! getent passwd snapserver >/dev/null; then
		addgroup --quiet --system snapserver
		adduser --quiet --ingroup snapserver --system --no-create-home snapserver
	fi
fi

#DEBHELPER#
